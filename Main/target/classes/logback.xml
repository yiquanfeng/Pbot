<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 1. 定义控制台输出器 (ConsoleAppender) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 定义日志输出格式 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--
      2. 设置全局日志级别
      - root 标签是根 logger，所有 logger 都继承自它。
      - level="INFO" 表示只打印 INFO 级别及以上的日志 (INFO, WARN, ERROR)。
      - 如果想看更多 WebMagic 的调试信息，可以改成 level="DEBUG"。
    -->
    <root level="INFO">
        <!-- 将日志输出到我们定义的 CONSOLE 输出器 -->
        <appender-ref ref="CONSOLE" />
    </root>

    <!--
      单独为 WebMagic 设置日志级别，可以更精细地控制
      比如全局是 INFO，但只想看 WebMagic 的 DEBUG 信息
    -->
    <!--
    <logger name="us.codecraft.webmagic" level="DEBUG" />
    -->

</configuration>
